{
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "dist",
		"module": "ESNext",
		"target": "ES6",
		"lib": ["es6", "esnext", "dom"],
		"allowJs": true,
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "preserve",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["src"]
}
